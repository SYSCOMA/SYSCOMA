<h1>Listing Competencies Matrices</h1>
 
<table class="table table-hover">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr>
 
  <% @matrices.each do |matrix| %>
    <tr data-link="<%= fill_matrix_path(matrix)%>">
      <td><%= matrix.name %></td>
      <td><%= matrix.short_description %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Back', root_path %>