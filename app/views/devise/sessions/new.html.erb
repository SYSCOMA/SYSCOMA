<h2><%= t('devise.custom.log_in', default: "log in").humanize %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field control-group">
    <%= f.label t('users.email', default: "email") %><br />
    <div class="controls">
      <%= f.email_field :email, autofocus: true %>
    </div>
  </div>

  <div class="field control-group">
    <%= f.label t('users.password.password', default: "password") %><br />
    <div class="controls">
      <%= f.password_field :password, autocomplete: "off" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field control-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit t('devise.custom.log_in', default: "log in").humanize, class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
