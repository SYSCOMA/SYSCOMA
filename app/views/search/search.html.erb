<div class="page-header">
  <h1><%=t '.title', :default => "Search results" %></h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Persons results</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new_search',
      :default => [t("helpers.links.new_search"), "New search"]),
      search_new_path, :class => 'btn btn-default'  %>
<%= link_to t('.back', :default => t("helpers.links.back")),
            :back, :class => 'btn btn-default' %>