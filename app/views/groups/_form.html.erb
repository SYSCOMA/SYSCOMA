<%= form_for @group, html: { class: "form-horizontal group" } do |f| %>

    <% if @group.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= t('errors.messages.not_saved', default: pluralize(@group.errors.count, "error").concat(" prohibited this %{resource} from being saved:"), count: @group.errors.count.to_s, resource: t('groups.group', default: 'group')) %></h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @group.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <%= f.hidden_field :subgroup_of_id %>

  <div class="control-group">
    <%= f.label t('groups.name', default: "name"), class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <%= error_span(@group[:name]) %>
  </div>
  <div id='empty-spaces-loader'></div>

  <%= f.submit t('helpers.links.save', default: "Save"), class: 'btn btn-primary' %>
  <%= link_to t('helpers.links.cancel', default: "Cancel"),
            :back, class: 'btn btn-default' %>
<% end %>
